<h2 class="text-center mt-4"><%= @user.username %> Profile</h2>
<%= get_gravator @user, size:200 %>
<div class="text-center pt-4">
  <% if logged_in? %>
    <% if @user == current_user %>
      <%= link_to 'Edit Profile', edit_user_path(@user) ,class:'btn btn-outline-primary'%>
    <%end%>
    <% if current_user.admin? && @user != current_user%>
      <%= link_to 'Delete User', @user ,method: :delete,data: {confirm: 'Are you sure?'},class:'btn btn-outline-primary'%>
    <% end %>
  <% end %>
</div>
<h2 class="text-center mb-4">Articles</h2>
<div class="flickr_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>
