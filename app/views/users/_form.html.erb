<div class="container">

  <%= form_with(model: @user, class:'shadow p-3 mb-3 bg-info rounded',local: true) do |form| %>
    <div class="row justify-content-center">
      <div class="col-10">
        <%= render 'shared/errors', obj: @user %>
        <div class="form-group row">
        <%= form.label :username, class: 'col-2 col-form-label text-light' %>
        <div class="col-10">
          <%= form.text_field :username, placeholder: 'Enter a username', class: 'form-control shadow rounded' %>
        </div>
        
      </div>
      <div class="form-group row">
        <%= form.label :email, class: 'col-2 col-form-label text-light' %>
        <div class="col-10">
          <%= form.email_field :email, placeholder: 'Enter your email address', class: 'form-control shadow rounded' %>
        </div>
          
      </div>
      <div class="form-group row">
        <%= form.label :password, class: 'col-2 col-form-label text-light' %>
        <div class="col-10">
          <%= form.password_field :password, placeholder: 'Choose a password', class: 'form-control shadow rounded' %>
        </div>
          
      </div>
      <div class="form-group row justify-content-center">
        <%= form.submit @user.new_record? ? "Sign Up": 'Update Profile', class: 'btn btn-outline-light btn-lg'%>
      </div>
  <% end %>
    
  </div> 
      </div>
      <div class="form-group row justify-content-center">
      <%= link_to 'Back]', articles_path %>
    </div>
</div>