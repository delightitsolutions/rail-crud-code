<div class="container ">
  <h2 class="text-center mt-4"> Listing All Articles</h2>
  <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
      
        <div class="card text-center shadow-sm  mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= article.user.username%>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to  article.title,  article ,class:'text-success'%></h5>
            <p class="card-text"><%= truncate(article.description,length:100) %></p>
            <%= link_to  'Show', article ,class:'btn btn-outline-success'%>
            <%= link_to 'Edit', edit_article_path(article) ,class:'btn btn-outline-primary'%>
            <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-outline-danger'%>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(article.created_at) %> ago</small>
          </div>
        </div>
      </div>
      
    </div>
  <% end %>
</div>
