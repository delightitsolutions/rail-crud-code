<div class="container">

  <%= form_with(model: @article, class:'shadow p-3 mb-3 bg-info rounded',local: true) do |form| %>
    <div class="row justify-content-center">
      <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
        <div class="form-group row">
        <%= form.label :title, class: 'col-2 col-form-label text-light' %>
        <div class="col-10">
          <%= form.text_field :title, placeholder: 'Article Title', class: 'form-control shadow rounded' %>
        </div>
        
      </div>
      <div class="form-group row">
        <%= form.label :description, class: 'col-2 col-form-label text-light' %>
        <div class="col-10">
          <%= form.text_area :description, placeholder: 'Article Description', rows: 10, class: 'form-control shadow rounded' %>
        </div>
          
      </div>

      <div class="form-group row justify-content-center">
        <%= form.submit "Save", class: 'btn btn-outline-light btn-lg'%>
      </div>
  <% end %>
    
  </div> 
      </div>
      <div class="form-group row justify-content-center">
      <%= link_to '[Show|', @article %> 
      <%= link_to 'Back]', articles_path %>
    </div>
</div>